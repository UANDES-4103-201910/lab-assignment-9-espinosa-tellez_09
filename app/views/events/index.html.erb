<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event["name"] %></td>
        <td><%= event["start_date"] %></td>
        <td><%= Place.find(event.place_id).name %></td>
        <td><%= link_to 'Buy Tickets', event %></td>
        <% if can? :manage, Event %>
          <td><%= link_to 'Edit', edit_event_path(event["id"]) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :manage, Event %>
  <%= link_to 'New Event', new_event_path %>
<% end %>

